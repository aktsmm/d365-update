{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "outDir": "dist/mcp",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src/mcp",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src/mcp/**/*"],
  "exclude": ["node_modules"]
}
